<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pekka.guardmyrear.SensorIndicatorFragment"
    android:onClick="resizeImage" >

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:src="@drawable/left_indicator"
        android:layout_width = "1px"
        android:layout_height= "1px"
        android:scaleType="fitXY"
        android:id="@+id/left_indicator_image"
        android:layout_gravity="left|bottom"
        android:contentDescription="this is a red circle"/>

    <ImageView
        android:src="@drawable/center_indicator"
        android:layout_width = "1px"
        android:layout_height= "1px"
        android:scaleType="fitXY"
        android:id="@+id/center_indicator_image"
        android:layout_gravity="center_horizontal|bottom"
        android:contentDescription="this is a red circle"/>

    <ImageView
        android:src="@drawable/right_indicator"
        android:layout_width = "1px"
        android:layout_height= "1px"
        android:scaleType="fitXY"
        android:id="@+id/right_indicator_image"
        android:layout_gravity="right|bottom"
        android:contentDescription="this is a red circle"/>

    <TextView
        android:padding="5pt"
        android:id="@+id/left_indicator_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom" />

    <TextView
        android:padding="5pt"
        android:id="@+id/right_indicator_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom" />

    <TextView
        android:padding="5pt"
        android:id="@+id/center_indicator_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom" />

</FrameLayout>
